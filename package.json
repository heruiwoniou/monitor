{
  "private": true,
  "scripts": {
    "build": "dotenv-run -f .env turbo build",
    "dev": "dotenv-run -f .env.local -- turbo run app#dev",
    "lint": "turbo lint",
    "test": "turbo test",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "format": "prettier",
    "ui": "pnpm --filter @monitor/ui ui",
    "prepare": "husky || true",
    "commit": "git-cz",
    "lint-staged": "lint-staged"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
    "@commitlint/cz-commitlint": "^19.5.0",
    "@dotenv-run/cli": "^1.3.6",
    "commitizen": "^4.3.1",
    "husky": "^9.1.7",
    "inquirer": "9",
    "lint-staged": "^15.2.10",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "turbo": "^2.3.1"
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=18"
  },
  "name": "monitor",
  "dependencies": {
    "clsx": "^2.1.1"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "lint-staged": {
    "/apps/**/*.{js,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "/packages/**/*.{js,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  }
}
